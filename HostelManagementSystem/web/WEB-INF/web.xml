<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>SavePref</servlet-name>
        <servlet-class>com.aman.classes.SavePref</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowHostels</servlet-name>
        <servlet-class>com.aman.classes.ShowHostels</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowStudentPref</servlet-name>
        <servlet-class>com.aman.classes.ShowStudentPref</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllotHostel</servlet-name>
        <servlet-class>com.aman.classes.AllotHostel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.aman.classes.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentRegistered</servlet-name>
        <servlet-class>com.aman.classes.StudentRegistered</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowEmailForm</servlet-name>
        <servlet-class>com.aman.classes.ShowEmailForm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SavePref</servlet-name>
        <url-pattern>/SavePref</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowHostels</servlet-name>
        <url-pattern>/ShowHostels</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowStudentPref</servlet-name>
        <url-pattern>/ShowStudentPref</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllotHostel</servlet-name>
        <url-pattern>/AllotHostel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentRegistered</servlet-name>
        <url-pattern>/StudentRegistered</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowEmailForm</servlet-name>
        <url-pattern>/ShowEmailForm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
